generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Peso {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  fecha             DateTime    @default(now()) @unique
  masa              Int   
  grasaCorporal     Int   
  agua              Int   
  grasaVisceral     Int   
  musculo           Int   
  nivelFisico       Int   
  hueso             Int   
  energia           Int   
  edadMetabolica    Int  
  imc               Int 
  userId            String
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}
